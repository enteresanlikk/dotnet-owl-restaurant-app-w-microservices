@model ProductDTO
@{
    ViewData["Title"] = "Detail - Home";
}

<form method="post">
    <input asp-for="Id" type="hidden" />
    <div class=" pt-4">
        <div class="card container">
            <div class="card-header row">
                <div class="col-12 col-md-6">
                    <h1>
                        @Html.Raw(Model.Name)
                    </h1>
                </div>
                <div class="col-12 col-md-6 text-right">
                    <span class="h1 text-warning">
                        @string.Format("{0:c}", Model.Price)
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge badge-primary text-white p-3 border">
                                        @Html.Raw(Model.CategoryName)
                                    </span>

                                    <p class="text-secondary">
                                        @Html.Raw(Model.Description)
                                    </p>
                                </div>
                            </div>
                            <div class="row px-4">
                                <input asp-for="Count" class="form-control" />
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-12 col-md-6 pb-1 ">
                    <a asp-action="Index" class="btn btn-success btn-square form-control">
                        Back to List
                    </a>
                </div>
                <div class="col-12 col-md-6 ">


                    <button type="submit" class="btn btn-primary form-control">
                        Add to Cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}