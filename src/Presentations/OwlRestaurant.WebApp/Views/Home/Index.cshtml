@model List<ProductDTO>
@{
    ViewData["Title"] = "Home";
}

<div class="container row">
    @foreach (var product in Model)
    {
        <div class="col-4 ">
            <div class="p-0 my-3 border">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h3 class="card-title text-success">
                            @Html.Raw(product.Name)
                        </h3>
                        <span class="badge badge-light mb-2 ">
                            @Html.Raw(product.CategoryName)
                        </span>
                        <div class="card-text">
                            @Html.Raw(product.Description)
                        </div>
                        <div class="row">
                            <div class="col pt-1">
                                <span>@string.Format("{0:c}", product.Price)</span>
                            </div>
                            <div class="col">
                                <a asp-action="Detail" asp-route-id="@product.Id"
                               class="btn btn-success form-control">
                                    Detail
                                </a>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>
