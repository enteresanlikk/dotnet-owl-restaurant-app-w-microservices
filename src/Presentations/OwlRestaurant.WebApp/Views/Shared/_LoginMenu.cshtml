<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a href="javascript:;" class="nav-link">
                @Html.Raw(User.Identity.Name)
            </a>
        </li>
        <li class="nav-item">
            <a asp-controller="Auth" asp-action="Logout" class="nav-link text-danger">
                Logout
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-controller="Auth" asp-action="Login" class="nav-link">
                Login
            </a>
        </li>
    }
</ul>