@model List<ProductDTO>
@{
    ViewData["Title"] = "Products";
}

<section class="product-list mt-4">
    <div class="container">
        <div class="row pb-2">
            <div class="col">
                <h1>
                    Products
                </h1>
            </div>
            <div class="col text-right pt-1">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus"></i> Create
                </a>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.Raw(item.Name)
                        </td>
                        <td>
                            @Html.Raw(item.CategoryName)
                        </td>
                        <td>
                            @Html.Raw(item.Price.ToString("c"))
                        </td>
                        <td class="text-right">
                            <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>